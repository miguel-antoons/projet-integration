<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom navigation bar -->
    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/arial</item>
    </style>

    <!-- Page title -->
    <style name="pageTitle">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Forms Page add -->

    <!--Spinner Background-->
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>




    <!-- product list font -->
    <style name="product_list">
        <item name="android:textColor">#373636</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Add of a style for the content of the home card view -->
    <!-- For the percentage and degree -->
    <style name="PoliceHomeCardView">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- For the main title of each card view -->
    <style name="MainTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- For the subtitles of each card view -> degree and temperature -->
    <style name="Subtitles">
        <item name="android:textSize">14sp</item>
    </style>

</resources>